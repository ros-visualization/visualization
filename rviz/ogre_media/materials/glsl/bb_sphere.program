//Draws a spherical billboard for every vertex

fragment_program rviz/bb_sphere/color.frag glsl
{
  source bb_sphere/color.frag
  default_params
  {
    param_named_auto highlight custom 5
  }
}

fragment_program rviz/bb_sphere/selection.frag glsl
{
  source bb_sphere/selection.frag
}

fragment_program rviz/bb_sphere/depth.frag glsl
{
  source bb_sphere/depth.frag
}
